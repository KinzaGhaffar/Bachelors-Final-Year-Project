<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#add8e6"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15.7dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15.7dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="800dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="700dp"
                android:background="@drawable/white_cueve_bg" />

            <ImageView
                android:id="@+id/logo"
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:src="@drawable/speeech"
                android:layout_marginStart="40dp"
                android:layout_marginTop="5dp"/>

            <EditText
                android:id="@+id/enteremail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:inputType="textEmailAddress"
                android:drawableLeft="@drawable/ic_baseline_user"
                android:drawablePadding="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="300dp"
                android:padding="12dp"
                android:hint="Enter Email"
                android:backgroundTint="#edf3f5"
                android:textColor="@color/black"
                android:background="@drawable/forget" />

            <EditText
                android:id="@+id/enterpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/ic_baseline_password"
                android:drawablePadding="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="360dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="#edf3f5"
                android:password="true"
                android:padding="12dp"
                android:hint="Enter Password"
                android:textColor="#18336e"
                android:background="@drawable/forget"
                tools:ignore="Deprecated"/>

            <ImageView
                android:id="@+id/visibility"
                android:layout_marginTop="370dp"
                android:layout_marginStart="330dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_eye">
            </ImageView>

            <TextView
                android:id="@+id/forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login to Your Account!"
                android:textColor="#1f98c9"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_gravity="end"
                android:layout_marginTop="420dp"
                android:layout_marginRight="35dp">
            </TextView>

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="180dp"
                android:layout_marginEnd="15dp"
                android:text="Login"
                android:layout_marginBottom="1dp"
                android:textSize="20dp"
                android:padding="8dp"
                android:layout_marginTop="540dp"
                android:textStyle="bold"
                android:backgroundTint="#1f98c9"
                android:textColor="@color/white"/>

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSignUp"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:text="Don't have an account? Sign Up"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#ffff"
                android:backgroundTint="#add8e6"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:textAllCaps="false"
                android:layout_marginTop="20dp"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>