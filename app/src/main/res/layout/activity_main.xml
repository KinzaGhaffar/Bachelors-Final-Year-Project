<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#18336e"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15.7dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15.7dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="580dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="500dp"
                android:background="@drawable/white_cueve_bg" />

            <ImageView
                android:id="@+id/logo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/logo"
                android:layout_marginStart="150dp"
                android:layout_marginTop="30dp"/>

            <EditText
                android:id="@+id/enternamee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_person_add"
                android:drawablePadding="15dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/edit_textfields_shape"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="100dp"
                android:padding="12dp"
                android:hint="Enter Name"
                android:inputType="text"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/enteremail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:inputType="textEmailAddress"
                android:drawableLeft="@drawable/ic_baseline_email"
                android:drawablePadding="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="150dp"
                android:padding="12dp"
                android:hint="Enter Email"
                android:textColor="@color/black"
                android:background="@drawable/edit_textfields_shape" />

            <EditText
                android:id="@+id/enterpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/ic_baseline_password"
                android:drawablePadding="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="200dp"
                android:layout_marginBottom="30dp"
                android:padding="12dp"
                android:hint="Enter Password"
                android:textColor="#18336e"
                android:background="@drawable/edit_textfields_shape"/>

            <EditText
                android:id="@+id/enterconfirmpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:drawableLeft="@drawable/ic_baseline_password"
                android:drawablePadding="15dp"
                android:inputType="textPassword"
                android:layout_marginTop="250dp"
                android:padding="12dp"
                android:hint="Enter Confirm Password"
                android:textColor="@color/black"
                android:background="@drawable/edit_textfields_shape"/>

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:text="Login"
                android:layout_marginBottom="1dp"
                android:textSize="20dp"
                android:padding="8dp"
                android:layout_marginTop="330dp"
                android:textStyle="bold"
                android:backgroundTint="#18336e"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnSignUp"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="200dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="330dp"
                android:layout_marginBottom="2dp"
                android:text="Signup"
                android:textSize="20dp"
                android:padding="8dp"
                android:textStyle="bold"
                android:backgroundTint="#18336e"
                android:textColor="@color/white">
            </Button>

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20.7dp">


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:paddingLeft="30dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/circle"/>

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="29dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/circle" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="29dp"
                        android:layout_marginTop="50dp"
                        android:src="@drawable/circle" />

                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnGoogle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="170dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#D5179CA3"
                android:padding="10dp"
                android:text="Google"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Already have an account?"
                android:textColor="#ffffff"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center_horizontal"
                android:text="Sigin"
                android:textColor="#ffffff"
                android:textSize="15sp" />

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>