<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#add8e6"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15.7dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15.7dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="800dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="700dp"
                android:background="@drawable/white_cueve_bg" />

            <ImageView
                android:id="@+id/logo"
                android:layout_width="320dp"
                android:layout_height="280dp"
                android:src="@drawable/secondscreen"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"/>

            <EditText
                android:id="@+id/TextVoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:drawablePadding="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="300dp"
                android:padding="12dp"
                android:backgroundTint="#edf3f5"
                android:textColor="@color/black"
                android:background="@drawable/forget" />

            <TextView
                android:id="@+id/pressmic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please Press Mic!"
                android:textColor="#1f98c9"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="370dp"
                android:layout_marginRight="35dp"/>

            <ImageView
                android:id="@+id/voice"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="420dp"
                android:layout_marginStart="150dp"
                android:src="@drawable/ic_baseline_mic_24">
            </ImageView>

            <Button
                android:id="@+id/text_to_speech_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Speak"
                android:drawableLeft="@drawable/speak"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textAllCaps="false"
                android:padding="8dp"
                android:layout_marginTop="500dp"
                android:layout_marginStart="240dp"
                android:backgroundTint="#1f98c9"
                android:textColor="@color/white">
            </Button>

        </FrameLayout>
    </LinearLayout>

